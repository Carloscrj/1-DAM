package dam.db;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class AccesoDB {
	private String driver;
	private String url;
	
	public AccesoDB() {
		driver = "org.sqlite.JDBC" ;
		url= "jdbc:sqlite:db/PruebasDB.db";
	}

	public Connection getConexion()  {
		Connection con = null;
		
		try {
			Class.forName(driver);
			con = DriverManager.getConnection(url);
		} catch (ClassNotFoundException e) {
			System.out.println("El driver indicado no es correcto");
			e.printStackTrace();//me sale toda la información de la excepción
		} catch (SQLException e) {
			System.out.println("No es posible establecer la conexión con la base de datos");
			e.printStackTrace();
		}
				
		return con;
	}

}
