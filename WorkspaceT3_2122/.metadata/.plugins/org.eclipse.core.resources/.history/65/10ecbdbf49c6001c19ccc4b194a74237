package mvc.modelo;

import java.util.ArrayList;



public class ListaRecetas {
	
	private ArrayList<Receta> listaRecetas;
	
	public ListaRecetas() { //constructor
		lista = new ArrayList<>(); //inicializamos el arraylist para cuando empecemos a introducir encuestas
	}

	
	public void nuevaReceta(Receta receta) { //método para añadir encuestas
		lista.add(receta);
	}

	public ArrayList<Receta> getLista() {
		return lista;
	}

	
	
	

}
